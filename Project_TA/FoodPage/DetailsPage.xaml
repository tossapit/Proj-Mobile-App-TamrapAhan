<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_TA.FoodPage.DetailsPage"
             Title="DetailsPage"
             BackgroundColor="#f01e2b">
    <Grid RowDefinitions="720,*" ColumnDefinitions="*,*,*">
        <Frame Grid.Row="1"  HeightRequest="40" VerticalOptions="End" Grid.ColumnSpan="3" Margin="30"/>
        <ImageButton x:Name="Btn_home" Source="home.png" Grid.Row="1"
                HeightRequest="35" 
                WidthRequest="50" 
             BackgroundColor="White" VerticalOptions="End" Margin="30"/>
        <ImageButton x:Name="Btn_post" Source="add_box.png" Grid.Row="1" Grid.Column="1"
                     HeightRequest="35" 
                     WidthRequest="50" BackgroundColor="White" 
                     VerticalOptions="End" Margin="30" />
        <ImageButton x:Name="Btn_profile" Source="profile.png" Grid.Row="1" Grid.Column="2"
                     HeightRequest="33" 
                     WidthRequest="50" BackgroundColor="White" 
                     VerticalOptions="End" Margin="30" />
        <ScrollView Grid.Row="0" Grid.ColumnSpan="3">
            <VerticalStackLayout>
                <Image Source="soup01" BackgroundColor="Aqua"/>


            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>